<%- model_class = Kind -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t 'titulos.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td><%= link_to kind.id, kind_path(kind) %></td>
        <td><%= kind.description %></td>
        <td><%=l kind.created_at %></td>
        <td>
          <%= link_to t('buttons.show', :default => t("helpers.links.show")),
                      kind_path(kind), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('buttons.edit', :default => t("helpers.links.edit")),
                      edit_kind_path(kind), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('buttons.destroy', :default => t("helpers.links.destroy")),
                      kind_path(kind),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>