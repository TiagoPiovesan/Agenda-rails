<%- model_class = Kind -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @kind.description %></dd>
</dl>

<%= link_to t('buttons.back', :default => t("helpers.links.back")),
              kinds_path, :class => 'btn btn-default'  %>
<%= link_to t('buttons.edit', :default => t("helpers.links.edit")),
              edit_kind_path(@kind), :class => 'btn btn-default' %>
<%= link_to t('buttons.destroy', :default => t("helpers.links.destroy")),
              kind_path(@kind),
              :method => 'delete',
