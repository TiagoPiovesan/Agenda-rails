<%- model_class = Contact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt>
    <strong><%= model_class.human_attribute_name(:nome) %>:</strong>
  </dt>
  <dd>
    <%= @contact.nome %>
  </dd>

  <dt>
    <strong><%= model_class.human_attribute_name(:email) %>:</strong>
  </dt>  
  <dd>
    <%= @contact.email %>
  </dd>
  
  <dt>
    <strong><%= model_class.human_attribute_name(:kind_id) %>:</strong>
  </dt>
  <dd>
    <%= @contact.kind_id %>
  </dd>

  <dt>
    <strong><%= model_class.human_attribute_name(:rmk) %>:</strong>
  </dt>
  <dd>
    <%= @contact.rmk %>
  </dd>

<hr>

  <dt>
    <strong><%= model_class.human_attribute_name(:stret) %>:</strong>
  </dt>
  <dd>
    <%= @contact.address.stret %>
  </dd>
  <dt>
    <strong><%= model_class.human_attribute_name(:number) %>:</strong>
  </dt>
  <dd>
    <%= @contact.address.number %>
  </dd>
  <dt>
    <strong><%= model_class.human_attribute_name(:city) %>:</strong>
  </dt>
  <dd>
    <%= @contact.address.city %>
  </dd>

<hr>

  <dt>
    <strong><%= model_class.human_attribute_name(:phone) %>:</strong>
  </dt>
  <dd>
  <% @contact.phones.each do |phones| %>
    <dd>
      <%=  "- #{phones.phone}" %>
    </dd>
  <% end %>
  </dd>
</dl>

<%= link_to t('buttons.back', :default => t("helpers.links.back")),
              contacts_path, :class => 'btn btn-default'  %>
<%= link_to t('buttons.edit', :default => t("helpers.links.edit")),
              edit_contact_path(@contact), :class => 'btn btn-default' %>
<%= link_to t('buttons.destroy', :default => t("helpers.links.destroy")),
              contact_path(@contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'VocÃª tem certeza?')) },
              :class => 'btn btn-danger' %>
